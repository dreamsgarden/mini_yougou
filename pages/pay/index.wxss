page {
  padding-bottom: 90rpx;
}
.cart .user_row {
  padding: 20rpx;
}
.cart .user_row .user_info {
  display: flex;
  justify-content: space-between;
}
.cart .cart_content .cart_title {
  font-size: 36rpx;
  padding: 20rpx;
  border-top: 1px solid var(--themeColor);
  border-bottom: 1px solid var(--themeColor);
}
.cart .cart_content .cart_main .cart_item {
  display: flex;
  padding: 5px;
  border-bottom: 1px solid #ccc;
}
.cart .cart_content .cart_main .cart_item .cart_img {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart .cart_content .cart_main .cart_item .cart_img image {
  width: 80%;
}
.cart .cart_content .cart_main .cart_item .cart_info {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart .cart_content .cart_main .cart_item .cart_info .name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
.cart .cart_content .cart_main .cart_item .cart_info .warp {
  display: flex;
  justify-content: space-between;
}
.cart .cart_content .cart_main .cart_item .cart_info .warp .price {
  color: var(--themeColor);
  font-size: 34rpx;
}
.cart .cart_content .cart_main .cart_item .cart_info .warp .num {
  display: flex;
}
.cart .cart_content .cart_main .cart_item .cart_info .warp .num .goods_num {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 55rpx;
  height: 55rpx;
}
.cart .tool {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  display: flex;
  border-top: 1px solid #ccc;
}
.cart .tool .total_price {
  flex: 5;
  text-align: right;
  padding-right: 20rpx;
}
.cart .tool .total_price text {
  color: var(--themeColor);
  font-size: 34rpx;
  font-weight: 600;
}
.cart .tool .order_pay {
  flex: 3;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: var(--themeColor);
  color: #fff;
}
