/* pages/goods_list/index.wxss */
.goods .first_tab .goods_item {
  display: flex;
  border-bottom: 1px solid #ccc;
  /* 商品图片 */
  /* 商品信息 */
}
.goods .first_tab .goods_item .goods_img_warp {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods .first_tab .goods_item .goods_img_warp image {
  width: 70%;
}
.goods .first_tab .goods_item .goods_info_warp {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.goods .first_tab .goods_item .goods_info_warp .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods .first_tab .goods_item .goods_info_warp .goods_price {
  color: var(--themeColor);
  font-size: 32rpx;
}
